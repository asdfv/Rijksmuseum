<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="by.grodno.vasili.rijksmuseum"
    >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".RijksmuseumApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_rm_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_rm_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        >
        <activity android:name=".feature.collection.CollectionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".feature.details.DetailsActivity" />
    </application>

</manifest>